<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <EditText
        android:id="@+id/rtsp_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingRight="25dp"
        android:hint="输入RTSP地址(格式为RTSP://...)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rtsp_scan_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_scan_btn"
        android:background="@null"
        app:layout_constraintRight_toRightOf="@id/rtsp_et"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toTopOf="@id/rtsp_et"
        app:layout_constraintBottom_toBottomOf="@id/rtsp_et" />

    <EditText
        android:id="@+id/rtmp_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingRight="25dp"
        android:hint="输入RTSP地址(格式为RTSP://...)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rtsp_et"
        app:layout_goneMarginTop="10dp"/>

    <ImageButton
        android:id="@+id/rtmp_scan_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_scan_btn"
        android:background="@null"
        app:layout_constraintRight_toRightOf="@id/rtmp_et"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toTopOf="@id/rtmp_et"
        app:layout_constraintBottom_toBottomOf="@id/rtmp_et" />

</android.support.constraint.ConstraintLayout>